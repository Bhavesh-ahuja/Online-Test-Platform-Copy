generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

// Defines the User table
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: One user can create many tests
  tests     Test[]
  submissions TestSubmission[] // A user can have many submissions
}

// Defines the Test table
model Test {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  duration    Int        // Duration in minutes
  createdAt   DateTime   @default(now())
  
  // Relation: Test belongs to a User (Admin)
  createdById Int
  createdBy   User       @relation(fields: [createdById], references: [id])
  
  // Relation: One test has many questions & can have many submissions
  questions   Question[]
  submissions TestSubmission[] 

}

// Defines the Question table
model Question {
  id            Int      @id @default(autoincrement())
  text          String
  type          String   // "MCQ" or "SHORT"
  options       String[] // Array of options for MCQ
  correctAnswer String?  // Optional for short answers
  
  // Relation: Question belongs to a Test
  testId        Int
  test          Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers       Answer[]  // A question can have many answers
}

model TestSubmission {
  id        Int      @id @default(autoincrement())
  score     Int
  status    String   @default("COMPLETED") // 'COMPLETED', 'TIMEOUT', 'TERMINATED'
  createdAt DateTime @default(now())
  
  // Relations
  studentId Int
  student   User     @relation(fields: [studentId], references: [id])
  testId    Int
  test      Test     @relation(fields: [testId], references: [id])
  answers   Answer[] // A submission is made up of many answers
}

model Answer {
  id           Int    @id @default(autoincrement())
  selectedAnswer String
  isCorrect    Boolean
  
  // Relations
  submissionId Int
  submission   TestSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  questionId   Int
  question     Question       @relation(fields: [questionId], references: [id])
}
